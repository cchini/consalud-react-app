{
  "baseUrl": "./",
  "compilerOptions": {
    "outDir": "./build",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es6",
    "jsx": "preserve",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "./typings"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./**/**/**/*.tsx",
    "./**/**/**/*.ts",
    "modules"
  ],
  "exclude": [
    "node_modules"
  ]
}
